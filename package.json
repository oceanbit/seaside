{
  "name": "@seaside/monorepo-root",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "storybook": "turbo run storybook --parallel",
    "test": "turbo run test",
    "changelog": "changeset",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.19.0",
    "eslint": "^7.32.0",
    "git-branch-is": "^4.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "turbo": "1.0.20"
  },
  "lint-staged": {
    "*{.js,.jsx,.ts,.tsx}": "eslint --fix"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          "build/**"
        ]
      },
      "test": {
        "outputs": []
      },
      "storybook": {
        "cache": false
      },
      "format": {
        "cache": false
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  }
}
